<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:james="https://jamesnet.dev/xaml/presentation"
    xmlns:cnvts="clr-namespace:AnatomyAnalyzer.Local.Converters"
    xmlns:units="clr-namespace:AnatomyAnalyzer.UI.Units">

    <Style TargetType="{x:Type units:PropertyListView}">
        <Setter Property="Margin" Value="0 0 0 0"/>
        <Setter Property="Background" Value="{DynamicResource PropList.Background}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:PropertyListView}">
                    <james:JamesGrid Rows="Auto, *" Columns="*"
                                     Background="{TemplateBinding Background}">
                        <Border Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            BorderBrush="#EFB13A">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                <ItemsPresenter Grid.IsSharedSizeScope="True"/>
                            </ScrollViewer>
                        </Border>
                    </james:JamesGrid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
