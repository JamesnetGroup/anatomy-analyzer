<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvts="clr-namespace:AnatomyAnalyzer.Local.Converters"
    xmlns:units="clr-namespace:AnatomyAnalyzer.UI.Units">

    <Style TargetType="{x:Type units:PropertyListView}">
        <Setter Property="Margin" Value="0 10 10 0"/>
        <Setter Property="Background" Value="#191919"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:PropertyListView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="2"
                            BorderBrush="#EFB13A">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <ItemsPresenter Grid.IsSharedSizeScope="True"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
